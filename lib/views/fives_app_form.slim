html
  head
    css:
      body {
        font-family:Verdana;
        font-size: 14px;
        margin:0;
        padding:0;
      }
      ul {
        list-style-type:none;
        margin:0;
        padding: 0 15px;
      }

      ul li {
        padding: 0 5px;
        display:inline-block ;
        width:50px;
        text-align:center;
      }
      ul.normal {
        padding: 0 25px;
      }
      ul.normal li,
      ul.side-bar  li {
         padding: 0;
         display: block;
         text-align:left;
         width:100%;
      }
      ul.side-bar {
        padding: 0;
      }
      .header {
        width:100%;
        color:white;
        background-color:#000066;
        font-size:36px;
        padding:12px;
        height:80px;
      }
      .left-column {
        padding:0 10px;
        float:left;
        width:26%;
        font-size:11px;
        background-color:lightgrey;
        height:819px;
      }
      .right-column {
        margin:0 0 0 10px;
        float:left;
        width:69%;
        height:819px;
      }
      .clear {
        clear:both;
      }
      .smaller {
        font-size:10px;
      }
      .url {
        color:blue;
      }
      .team_spacer {
        margin-top:50px;
        margin-bottom:132px;
      }
      .designation_spacer {
        margin-top:90px;
        margin-bottom:80px;
      }
      .left-bar-spacer {
          padding-bottom:16px;
      }
      table {
        margin-top:25px;
        line-height:30px;
      }
      .indented {
        margin-left:10px;
      }
      .regular {
          font-size:12px;
      }

  body
    div.header
      | The Forest Glade Fives <br/>
        #{$saturday_date} & #{$sunday_date} #{$fives_year}
    div.left-column
      == slim :fives_app_left_bar
    div.right-column
      p
        | The Forest Glade Fives has been running as a
          tournament since 2000 and has become one of
          the premier end of season 5 a-side football
          events for clubs in the South of England.

      h2.indented Saturday #{$saturday_date} #{$fives_year}

