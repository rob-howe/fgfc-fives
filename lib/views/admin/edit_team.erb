<form name="update" action="/admin/update" method="post">
    <input type="hidden" name="id" value="<%= @fives_team.id %>"/>

    <div class="dialog">
        <table>
            <tbody>
            <tr class="prop">
                <td colspan="2" class="name">
                    <h3>Team Details</h3>
                </td>
                <td colspan="2">Fields marked with an <span class="required">*</span> are required.</td>
            </tr>
            <tr class="prop">
                <td valign="top" class="name">
                    <label for="ageGroup.id">Age Group</label><span class="required"> *</span>
                </td>
                <td id="ageGroupCell" valign="top" class="value ${hasErrors(bean: fivesTeamInstance, field: 'ageGroup', 'errors')}">
                    <select id="ageGroup" name="age_group_id">
                        <option value="">Please select</option>
                        <% @age_groups.each do |age_group| %>
                            <option value="<%= age_group.id %>" <%= "selected" if age_group.id == @fives_team.age_group_id %> ><%= age_group.description %></option>
                        <% end %>
                    </select>

                    <span class="tooltip" title="The age group for your team as of the 2010/2011 football season."></span>
                </td>
            </tr>
            <tr class="prop">
                <td valign="top" class="name">
                    <label for="teamName">Team Name</label><span class="required"> *</span>
                </td>
                <td id="teamNameCell" valign="top" class="value">
                    <input type="text" id="team_name" name="team_name" value="<%= @fives_team.team_name%>" size="30" tabindex="2" maxlength="60"/>
                </td>
                <td valign="top" class="name">
                    <label for="teamDesignation">Designation</label>
                </td>
                <td valign="top" class="value ${hasErrors(bean: fivesTeamInstance, field: 'teamDesignation', 'errors')}">
                    <input type="text" id="designation" name="team_designation" value="<%= @fives_team.team_designation%>" tabindex="3" maxlength="30"/>
                    <span class="tooltip" title="Used to identify several teams from one club in the same age group, examples are 'Lions', 'Tigers', 'A', 'Red', 'Blue', 'Volcanos'...etc, it can however be anything you like."></span>
                </td>
            </tr>

            <tr class="prop">
                <td colspan="4" class="name">
                    <h3>Payment</h3>
                </td>
            </tr>

            <tr class="prop">
              <td valign="top" class="name">
                <label for="paid">Paid</label>
              </td>
              <td valign="top" class="value">
                <input type="checkBox" name="paid" <%='checked="checked"' if @fives_team.paid%> />
              </td>
            </tr>
            <tr class="prop">
              <td valign="top" class="name">
                <label for="paypal">PayPal</label>
              </td>
              <td valign="top" class="value">
                <input type="checkBox" name="paypal" <%='checked="checked"' if @fives_team.paypal%> />
              </td>
            </tr>


            <tr class="prop">
                <td colspan="4" class="name">
                    <h3>Manager/Contact Details</h3>
                </td>
            </tr>

            <tr class="prop">
                <td valign="top" class="name">
                    <label for="managerName">Name</label><span class="required"> *</span>
                </td>
                <td id="managerNameCell" valign="top" class="value ${hasErrors(bean: fivesTeamInstance, field: 'managerName', 'errors')}">
                    <input type="text" id="manager_name" name="manager_name" value="<%= @fives_team.manager_name%>" size="30" tabindex="4" maxlength="70"/>
                </td>
                <td valign="top" class="name">
                    <label for="addressLine1">Address</label>
                </td>
                <td valign="top" class="value ${hasErrors(bean: fivesTeamInstance, field: 'addressLine1', 'errors')}">
                    <input type="text" name="address_line_1" value="<%= @fives_team.address_line1%>" size="30" tabindex="8"/>
                </td>
            </tr>

            <tr class="prop">
                <td valign="top" class="name">
                    <label for="homePhone">Home Phone</label>
                </td>
                <td id="homePhoneCell" valign="top" class="value">
                    <input type="text" id="homePhone" name="home_phone" value="<%= @fives_team.home_phone%>" tabindex="5" maxlength="14"/>
                </td>
                <td valign="top" class="name">
                    <label for="addressLine2"></label>
                </td>
                <td valign="top" class="value ${hasErrors(bean: fivesTeamInstance, field: 'addressLine1', 'errors')}">
                    <input type="text" name="address_line_2" value="<%= @fives_team.address_line2%>" size="30" tabindex="9" maxlength="100"/>
                </td>
            </tr>

            <tr class="prop">
                <td valign="top" class="name">
                    <label for="mobilePhone">
                        Mobile Phone
                    </label><span class="required"> *</span>
                </td>
                <td id="mobilePhoneCell" valign="top" class="value">
                    <input type="text" id="mobilePhone" name="mobile_phone" value="<%= @fives_team.mobile_phone%>" tabindex="6" maxlength="14"/>
                    <span class="tooltip" title="A mobile number is required as text messaging is one of our forms of communication to participating teams."></span>
                </td>
                <td valign="top" class="name">
                    <label for="addressTown">
                        Town
                    </label>
                </td>
                <td valign="top" class="value ${hasErrors(bean: fivesTeamInstance, field: 'addressTown', 'errors')}">
                    <input type="text" name="address_town" value="<%= @fives_team.address_town%>" tabindex="10" maxlength="100"/>
                </td>
            </tr>


            <tr class="prop">
                <td valign="top" class="name">
                    <label for="emailAddress">Email Address</label><span class="required"> *</span>
                </td>
                <td id="emailAddressCell" valign="top" class="value ${hasErrors(bean: fivesTeamInstance, field: 'emailAddress', 'errors')}">
                    <input type="text" id="emailAddress" name="email_address" value="<%= @fives_team.email_address%>" size="30" tabindex="7" maxlength="50"/>
                    <span class="tooltip" title="For on line applications we require an email address so we can email your invoice. If you don't have an email address download the application form and send it in the post."></span>
                </td>
                <td valign="top" class="name">
                    <label for="addressCounty">
                        County
                    </label>
                </td>
                <td valign="top" class="value ${hasErrors(bean: fivesTeamInstance, field: 'addressCounty', 'errors')}">
                    <input type="text" name="address_county" value="<%= @fives_team.address_county%>" tabindex="11" maxlength="50"/>
                </td>
            </tr>

            <tr class="prop">
                <td></td>
                <td></td>
                <td valign="top" class="name">
                    <label for="addressPostcode">
                        Postcode
                    </label>
                </td>
                <td valign="top" class="value ${hasErrors(bean: fivesTeamInstance, field: 'addressPostcode', 'errors')}">
                    <input type="text" name="address_postcode" value="<%= @fives_team.address_postcode%>" size="9" tabindex="12" maxlength="10"/>
                </td>
            </tbody>
        </table>
    </div>
    <div class="nav">
        <span class="button"><input type="submit" value="Update" class="save"/></span>
    </div>
</form>